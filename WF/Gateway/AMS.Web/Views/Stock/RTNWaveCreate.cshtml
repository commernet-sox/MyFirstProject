@{
    ViewBag.Title = "库内分拨波次创建";
}
@section HeaderCss{
    <style>
        .page-footer {
            display: block;
            position: fixed;
            bottom: 0;
            width: 100%;
            height: 55px;
            font-size: 14px;
            border-top: 1px solid rgb(239, 239, 239);
            z-index: 2;
            background-color: #fff;
            justify-content: flex-start;
        }
    </style>
}
<div class="demo-container">
    <div>
        <div class="rect demo-dark header">
            <div class="dx-form-group-with-caption dx-form-group dx-group-colcount-1" style="margin-top:5px;">
                <span class="dx-form-group-caption"></span>
            </div>
        </div>
        <div style="width:100%;">
            <div>
                <div class="rect demo-dark" style="width:29%;">
                    <div id="form-container">
                        <div class="dx-form-group-content">
                            <div id="form" style="width:100%"></div>
                        </div>
                    </div>
                </div>
                <div class="rect demo-light" style="width:1%;">
                </div>
                <div id="gridInfo" class="rect demo-dark">
                    <div id="toolbar"></div>
                    <div id="gridContainer"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="page-footer">
        <div style="width:29%; display:inline-block;">
            <div id="btnClear"></div>
            <div id="btnQuery"></div>
        </div>
        <div style="width:71%;display:inline-block;float:right;">
            <div style="display:inline-block;">
                <div style="display:inline-block;vertical-align: middle;margin-top:4px;margin-left:50px;">每页显示:</div>
                <span id="pageSize" style="width:60px;vertical-align: middle;display:inline-block;"></span>
            </div>
            <div style="display:inline-block;float:right;">
                <ul class="pagination" style="margin-top:8px;"></ul>
            </div>
        </div>
    </div>
</div>
@section FooterScript{
    <script src="~/busjs/common.js" asp-append-version="true"></script>
    <script src="~/busjs/stock/rtnwavecreate.js" asp-append-version="true"></script>
}